@model UsuarioModel

<head>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>


<div class="agrupamento">
    <form asp-action="DadosPessoais" method="post">
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" placeholder="Ex: JoÃ£o da Silva" required>
        </div>
        <div class="form-group">
            <label asp-for="Sobrenome"></label>
            <input asp-for="Sobrenome" placeholder="Ex: Silva" required>
        </div>
        <div class="form-group">
            <label asp-for="DataNascimento"></label>
            <input asp-for="DataNascimento" type="date" required>
        </div>
        <div class="form-group">
            <label asp-for="CPF"></label>
            <input asp-for="CPF" placeholder="Ex: 123.456.789-00" required>
        </div>
        <div class="form-group">
            <label asp-for="Telefone"></label>
            <input asp-for="Telefone" placeholder="Ex: (11) 91234-5678" required>
        </div>
        <button type="submit" class="btn">Continuar Cadastro</button>
    </form>
</div>
